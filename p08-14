==========Router5 [NET-E] ==================================
enable
configure terminal
  hostname R5

  interface FastEthernet 0/0
    ip address 172.8.5.1 255.255.255.0
    no shutdown
    exit
interface FastEthernet 1/0
    ip address 172.8.6.1 255.255.255.0
    no shutdown
    exit

  ip dhcp pool NET5
    network 172.8.5.0 255.255.255.0
    default-router 172.8.5.1
    exit
  ip dhcp excluded-address 172.8.5.1 172.8.5.100

ip dhcp pool NET6
    network 172.8.6.0 255.255.255.0
    default-router 172.8.6.1
    exit
  ip dhcp excluded-address 172.8.6.1 172.8.6.100

  interface FastEthernet 4/0
    ip address 172.8.25.5 255.255.255.0
    no shutdown
    exit


  router rip
    version 2
    network 172.8.0.0
    no auto-summary

    passive-interface FastEthernet 0/0
    exit

  exit
copy running-config startup-config


